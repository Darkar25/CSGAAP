<Window x:Class="CSGAAP.GUI.ProcessingProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSGAAP.GUI"
        mc:Ignorable="d"
        Title="Processing..."
        SizeToContent="WidthAndHeight"
        ResizeMode="CanResizeWithGrip"
        Closing="Window_Closing"
        ContentRendered="Window_ContentRendered">
    <StackPanel Margin="8">
        <Label Content="Please, wait. Your documents are being processed..."/>
        <Button Content="Cancel" Name="cancel" Click="cancel_Click" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
